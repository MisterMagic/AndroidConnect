<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomas.androidconnect" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.thomas.androidconnect.MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.thomas.androidconnect.AddGame"
            android:label="@string/title_activity_add_game" >
        </activity>
        <activity
            android:name="com.example.thomas.androidconnect.AddPicture"
            android:label="@string/title_activity_add_picture" >
        </activity>
        <activity
            android:name="com.example.thomas.androidconnect.PictureListView"
            android:label="@string/title_activity_picture_list_view" >
        </activity>
        <activity
            android:name="com.example.thomas.androidconnect.PictureItem"
            android:label="@string/title_activity_picture_item" >
        </activity>
    </application>

</manifest>
